---
import { butterCMS } from "../utils/buttercmssdk";

const items = await butterCMS.content.retrieve(["navigation_menu"]);
const menuItems = items.data.data.navigation_menu[0].menu_items;
---

<header id="header">
  <div class={`navbar-area ${false && "sticky"}`}>
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-12">
          <nav class="navbar navbar-expand-lg">
            <a class="navbar-brand" href="/">
              <img
                src="https://cdn.buttercms.com/PBral0NQGmmFzV0uG7Q6"
                alt="Logo"
              />
            </a>
            <button
              id="toggle"
              class="navbar-toggler"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#navbarSupportedContent"
              aria-controls="navbarSupportedContent"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
              <span class="toggler-icon"></span>
              <span class="toggler-icon"></span>
              <span class="toggler-icon"></span>
            </button>

            <div
              class={`collapse navbar-collapse sub-menu-bar ${
                false ? "show" : ""
              }`}
              id="navbarSupportedContent"
            >
              <div class="ms-auto">
                <ul id="nav" class="navbar-nav ms-auto">
                  {
                    menuItems.map(({ label, url }) => (
                      <li class="nav-item">
                        <a class="page-scroll " href={`/${url}`}>
                          {label}
                        </a>
                      </li>
                    ))
                  }
                </ul>
              </div>
            </div>
            <!-- navbar collapse -->
          </nav>
          <!-- navbar -->
        </div>
      </div>
      <!-- row -->
    </div>
    <!-- container -->
  </div>
  <!-- navbar area -->
</header>
